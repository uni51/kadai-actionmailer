<h1>以下の内容で、送信する。</h1>

<%= form_with(model: @blog, local: true, url: blogs_path) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :photo, id: :blog_photo %>

  <div class="row mb_20">
    <div class="col-sm-2">タイトル</div>
    <div class="col-sm-10"><%= @blog.title %></div>
  </div>
  <div class="row mb_20">
    <div class="col-sm-2">内容</div>
    <div class="col-sm-10"><%= @blog.content %></div>
  </div>
  <div class="row mb_20">
    <div class="col-sm-2">画像</div>
    <div class="col-sm-10"><%=image_tag(@blog.photo.url) %></div>
    <%= hidden_field_tag :"cache[photo]",@blog.photo.cache_name %>
  </div>
  <div class="row center mb20 pb_10">
    <%= form.submit "登録する", class:'btn btn-success' %>
  </div>
<% end %>

<%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :photo, id: :blog_photo %>
  <%= hidden_field_tag :"cache[photo]",@blog.photo.cache_name %>
  <div class="row center">
  <%= form.submit "もどる", name: 'back', class:'btn btn-primary' %>
  </div>
<% end %>
