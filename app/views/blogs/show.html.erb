<h1>ブログ詳細画面</h1>

<div class="row">
  <div class="col-sm-2">タイトル</div>
  <div class="col-sm-10"><%= @blog.title %></div>
</div>
<div class="row">
  <div class="col-sm-2">内容</div>
  <div class="col-sm-10"><%= @blog.content %></div>
</div>
<div class="row">
  <div class="col-sm-2">画像</div>
  <div class="col-sm-10"><%=image_tag @blog.photo %></div>
</div>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
